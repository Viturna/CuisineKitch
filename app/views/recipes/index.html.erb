
<div class="container">
  <div class="row">
    <div class="col">
      <p style="color: green;"><%= notice %></p>
      <h1>Recettes</h1>

      <div id="recipes">
        <% @recipes.each do |recipe| %>
          <%= render recipe %>
          <p>
            <%= link_to "Montrer cette recette", recipe %>
          </p>
        <% end %>
      </div>
      <%= link_to "Nouvelle recette", new_recipe_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
